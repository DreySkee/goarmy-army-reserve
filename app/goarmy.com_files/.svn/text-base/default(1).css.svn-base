/* header and user info */


#CQ #cq-useradmin-wrapper #cq-header {
    height:36px;
    background:url('default/resources/titlebar_bg.png');
}

#CQ #cq-useradmin-wrapper #cq-header .cq-homelink a {
    width:210px;
}

#CQ #cq-useradmin-wrapper #cq-switcher {
    padding-left:409px;
}

#CQ #cq-useradmin-wrapper #userinfo {
    color:#ffffff; 
    background-color:transparent; 
    top:6px;
    position:relative; 
    padding-right:6px;
    font:12px tahoma,arial,verdana,sans-serif;
}


#CQ #cq-useradmin-wrapper #userinfo div {
    background-color:transparent;
    text-align:right; 
}


/* grid */
#CQ #cq-useradmin-wrapper #editor .userIcon {
    height:16px;
    background:url('default/../../../../../cq/ui/widgets/themes/default/icons/16x16/user.png');
    background-repeat:no-repeat;
}


#CQ #cq-useradmin-wrapper #editor .groupIcon {
    height:16px;
    background:url('default/../../../../../cq/ui/widgets/themes/default/icons/16x16/group.png');
    background-repeat:no-repeat;
}


#CQ #cq-useradmin-wrapper #user-selection .userIcon {
    height:21px;
    background:url('default/../../../../../cq/ui/widgets/themes/default/icons/16x16/user.png');
    background-repeat:no-repeat;
    background-position:3px 3px;
    padding:3px 0 3px 22px
}


#CQ #cq-useradmin-wrapper #user-selection .groupIcon {
    height:21px;
    background:url('default/../../../../../cq/ui/widgets/themes/default/icons/16x16/group.png');
    background-repeat:no-repeat;
    background-position:3px 3px;
    padding:3px 0 3px 22px
}

#CQ #cq-useradmin-wrapper .status {
    height: 16px;
    padding-left: 20px;
    background-repeat: no-repeat;
    background-position: 8px -2px;
}
#CQ #cq-useradmin-wrapper .status-modified {
    background-image: url(default/../../../../../cq/ui/widgets/themes/default/icons/16x16/bulb-blue.gif);
}
#CQ #cq-useradmin-wrapper .status-activated {
    background-image: url(default/../../../../../cq/ui/widgets/themes/default/icons/16x16/bulb-green.gif);
}

#CQ #cq-useradmin-wrapper .status-deactivated {
    background-image: url(default/../../../../../cq/ui/widgets/themes/default/icons/16x16/bulb-red.gif);
}

#CQ #cq-useradmin-wrapper .status-localmodified {
    color: #cccccc;
    background-image: url(default/../../../../../cq/ui/widgets/themes/default/icons/16x16/bulb-grey.gif);
}

#CQ #cq-useradmin-wrapper .status-pending {
    background-image: url(default/../../../../../cq/ui/widgets/themes/default/icons/16x16/bulb-orange.gif);
}

